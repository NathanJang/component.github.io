
.components
  margin: 40px 0
  width: 100%
  max-width: 1140px
  min-width: 400px

.component
  height: 140px
  overflow: hidden
  position: relative
  border-bottom: 1px solid #eee
  margin: 5px
  margin-bottom: 50px
  float: left
  width: 32%

.component h3
  margin: 0
  a
    color: inherit

.component .repo
  font-size: 12px
  color: #7f7f7f

@media screen and (max-width: 900px)
  .component
    width: 48%

@media screen and (max-width: 700px)
  .component
    width: 100%
