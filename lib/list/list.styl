
.components
  margin: 40px 0
  width: 100%
  max-width: 1140px
  min-width: 400px

.component
  height: 140px
  overflow: hidden
  position: relative
  border-bottom: 1px solid #eee
  margin: 5px
  margin-bottom: 50px
  padding-right: 15px
  float: left
  width: 32%

.component h3
  margin: 0
  a
    color: inherit

.component .repo
  font-size: 12px
  color: #7f7f7f

.component .info
  absolute: bottom left
  background: rgba(0,0,0,.85)
  color: white
  font-size: 12px
  width: 100%
  -webkit-font-smoothing: antialiased
  tr:first-child td
    padding-top: 8px
  tr:last-child td
    padding-bottom: 8px
  td
    padding: 0 8px
  td:first-child
    opacity: .6
    width: 20%

@media screen and (max-width: 900px)
  .component
    width: 48%

@media screen and (max-width: 700px)
  .component
    width: 100%
